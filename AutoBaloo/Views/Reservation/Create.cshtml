@model Reservation
@using  AutoBaloo.Data.Enums;
@{ ViewData["Title"] = "Ajouter Une Réservation"; }

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Ajouter une nouvelle Réservation</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="col-sm-7">
                        <select asp-for="TypeReservation" class="custom-select mr-sm-2"
                                asp-items="Html.GetEnumSelectList<TypeReservation>()">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="TypeReservation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateDebut" class="control-label"></label>
                        <input asp-for="DateDebut" class="form-control" />
                        <span asp-validation-for="DateDebut" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateFin" class="control-label"></label>
                        <input asp-for="DateFin" class="form-control" />
                        <span asp-validation-for="DateFin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duree" class="control-label"></label>
                        <input asp-for="Duree" class="form-control" />
                        <span asp-validation-for="Duree" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdVehicule" class="control-label"></label>
                        <select asp-for="IdVehicule" class="form-control" asp-items="ViewBag.Vehicule"></select>
                        <span asp-validation-for="IdVehicule" class="text-danger"></span>
                    </div>
                   
                        
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>


