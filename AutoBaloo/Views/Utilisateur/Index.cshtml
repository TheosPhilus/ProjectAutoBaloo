
@model IEnumerable<Utilisateur>

@{
    ViewData["Title"] = "Liste des Utilisateurs  ";
}




<div class="row">


    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.NomUtilisateur)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailUtilisateur)</th>
                    <th>@Html.DisplayNameFor(model => model.Adresse)</th>


                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NomUtilisateur)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EmailUtilisateur)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Adresse)
                        </td>







                        <td class="align-middle">

                            <a class="btn btn-outline-primary  " asp-action="Edit" asp-route-id="@item.Id">        <i class="bi bi-pencil-square">  </i>  Modifier</a> |


                            @Html.ActionLink("Supprimer", "delete", new { id = @item.Id }, new { @class = "btn btn-danger" })



                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

