@model IEnumerable<Vehicule>

@{
    ViewData["Title"] = "Liste des acteurs";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.MarqueVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.StatutVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.TypeCarbu)</th>
                    <th>@Html.DisplayNameFor(model => model.PrixVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.DescriptionVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.DateConstruct)</th>
                    <th>@Html.DisplayNameFor(model => model.KM)</th>
                    <th>@Html.DisplayNameFor(model => model.OptionVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.CouleurVehicule)</th>
                    <th>@Html.DisplayNameFor(model => model.ImageURL)</th>

                    { <th>Actions</th>}

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.MarqueVehicule)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.StatutVehicule)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.TypeCarbu)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.PrixVehicule)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DescriptionVehicule)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DateConstruct)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.KM)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.OptionVehicule)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CouleurVehicule )
                    </td>
                    <td class="align-middle">
                        <img class="img-thumbnail" src="images/vehicules/1.jpg" alt="@item.ImageURL"  />
                    </td>
                    
                    {
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    }

                </tr>
                }
            </tbody>

        </table>

    </div>
</div>
