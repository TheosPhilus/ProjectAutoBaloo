@model NewStockVM
@using AutoBaloo.Data;

@{ ViewData["Title"] = "Modification de  Stock"; }

<div class="row">
    <div class="col-md-8 offset-2">
        <div style="text-align:center">

            <h4>Modification des niveaux de stocks</h4>

        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="IdVehicule" class="control-label"></label>
                                <select asp-for="IdVehicule" class="form-control" asp-items="ViewBag.Vehicules"></select>
                                <span asp-validation-for="IdVehicule" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="DateStock" class="control-label"></label>
                                <input asp-for="DateStock" type="date" class="form-control" />
                                <span asp-validation-for="DateStock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="QteStock" class="control-label"></label>
                                <input asp-for="QteStock" type="number" class="form-control" />
                                <span asp-validation-for="QteStock" class="text-danger"></span>
                            </div>

                        </div>


                    </div>
                    <div class="form-group">
                        <input type="submit" value="Modifier" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Afficher tout</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>





